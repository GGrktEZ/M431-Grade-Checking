@page "/"
@page "/login"
@using Shared.DTOs

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm" style="max-width: 500px; width: 100%;">
        <div class="card-header text-center">
            <h4 class="mb-0">Login</h4>
        </div>

        <div class="card-body">

            @* Info / Error Messages *@
            @if (!string.IsNullOrWhiteSpace(ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ErrorMessage
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(InfoMessage))
            {
                <div class="alert alert-info" role="alert">
                    @InfoMessage
                </div>
            }

            <EditForm EditContext="_editContext" OnSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <InputText class="form-control" type="email" @bind-Value="loginDto.email" />
                    <ValidationMessage For="@(() => loginDto.email)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Passwort</label>
                    <InputText class="form-control" type="password" @bind-Value="loginDto.password" />
                    <ValidationMessage For="@(() => loginDto.password)" />
                </div>

                <button type="submit" class="btn btn-primary w-100" disabled="@IsLoading">
                    @if (IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span class="ms-2">Wird gesendet...</span>
                    }
                    else
                    {
                        <span>Login</span>
                    }
                </button>
            </EditForm>

            <div class="text-center mt-3">
                <span>Noch keinen Account?</span>
                <a href="/register">Hier registrieren</a>
            </div>
        </div>
    </div>
</div>
